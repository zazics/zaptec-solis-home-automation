# Application Configuration
PORT=3000
NODE_ENV=development

# Solis Inverter Configuration
SOLIS_SIMULATE_DATA=false
SOLIS_PORT=/dev/ttyACM0
SOLIS_BAUD_RATE=9600
SOLIS_DATA_BITS=8
SOLIS_STOP_BITS=1
SOLIS_PARITY=none
SOLIS_SLAVE_ID=1
SOLIS_RESPONSE_TIMEOUT=2000
SOLIS_RETRY_COUNT=3
SOLIS_RETRY_DELAY=500

# Zaptec Configuration
ZAPTEC_API_URL=https://api.zaptec.com
ZAPTEC_USERNAME=your_username
ZAPTEC_PASSWORD=your_password
ZAPTEC_CHARGER_ID=your_charger_id
ZAPTEC_INSTALLATION_ID=your_installation_id

# Home Automation Configuration
AUTOMATION_ENABLED=true
AUTOMATION_MODE=surplus
MAX_CHARGING_POWER=7360
PRIORITY_LOAD_RESERVE=500

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/solis-automation
MONGODB_SAVE_FREQUENCY=2

# TpLink-Tapo
TAPO_USERNAME=
TAPO_PASSWORD=
TAPO_DEVICES=  # name1:ip1:type1,name2:ip2:type2

